function plot_1d_estimation( data, mu, sigma, mu_e, sigma_e, title_, resolution )
    y = zeros(size(data));
    x_range = 0:resolution:max(data(1,:))+1;
    norm = normpdf(x_range,mu,sigma);
    norm_e = normpdf(x_range,mu_e, sigma_e);
    
    figure();
    hold on;
    scatter(data,y);
    plot(x_range,norm, 'r');
    plot(x_range,norm_e, 'b);
    title(title_);
    legend('Data', 'True Probability', 'Estimated Probability')
    grid on;
    hold off;
